---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  element: string;
  class?: string;
}

const { element: Element, class: customStyle, ...props } = Astro.props;
---

<Element
  class:list={[
    "leading-5 rounded-md w-fit border-none bg-black transition-all ease-in duration-200 group",
    customStyle,
  ]}
  {...props}
>
  <span
    class="block text-center bg-secondary w-fit border-current text-current border-2 py-2 px-6 -translate-y-[0.15rem] transition-[transform] duration-150 group-active:translate-y-0 group-hover:-translate-y-1"
    ><slot /></span
  >
</Element>
