---
import Menu from "./icons/Menu.astro";

interface Props {
  id: string;
  class?: string;
}

const { id, class: customStyles } = Astro.props;
---

<input type="checkbox" id={id} hidden class="peer" />
<label
  aria-label="Abrir el panel de navegación"
  for={id}
  class:list={[
    customStyles,
    "outline-none peer-checked:[&>.first]:hidden peer-checked:[&>.last]:block cursor-pointer transition peer-checked:-rotate-90 rotate-0 duration-300",
  ]}
>
  <p class="sr-only">Abrir el panel de navegación</p>
  <Menu />
</label>
