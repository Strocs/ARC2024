---
import type { Activity, Color } from "@cTypes/types";
import ActivityCard from "./ActivityCard.astro";

interface Props {
  color: Color;
  time: string[] | string;
  schedule: Activity[];
  day: string;
}

const { color, time, schedule, day } = Astro.props;
---

<div class="space-y-10">
  <hr class:list={["border-2 border-dashed", color.border]} />
  <section class="flex h-fit gap-2 md:gap-10">
    <h3
      class:list={[
        "font-fira tracking-wider leading-[1.5rem] text-2xl md:text-4xl font-black [writing-mode:vertical-lr] text-end -scale-100",
        color.text,
      ]}
    >
      {time}
    </h3>
    <ul class="flex flex-wrap gap-6 w-full">
      {
        schedule.map((activity) => (
          <ActivityCard {...activity} day={day} color={color} />
        ))
      }
    </ul>
  </section>
</div>
