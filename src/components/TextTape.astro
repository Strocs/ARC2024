---
interface Props {
  class?: string;
  element?: string;
  size?: string;
}

interface TextSize {
  [key: string]: string;
}

const {
  class: customStyle,
  element: Element = "h2",
  size = "base",
  ...props
} = Astro.props;

const textSize: TextSize = {
  sm: "",
  md: "",
  base: "text-base md:text-base",
  lg: "text-lg md:text-xl pb-0.5",
  xl: "text-xl md:text-3xl tracking-tight pb-1",
  "2xl": "text-2xl md:text-5xl tracking-tighter pb-2",
};
---

<Element
  {...props}
  class:list={[
    customStyle,
    textSize[size],
    "text-secondary font-black text-center uppercase bg-black w-fit h-fit px-4 mx-auto scale-y-150 -skew-y-[6deg] hover:skew-y-0 transition duration-300 cursor-default delay-150 shadow-xl",
  ]}
>
  <slot />
</Element>
