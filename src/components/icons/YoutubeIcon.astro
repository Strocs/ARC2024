---
interface Props {
  size?: number;
}
const { size = 32 } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width={size}
  height={size}
  viewBox="0 0 24 24"
  stroke="currentColor"
  stroke-width="1.5"
  stroke-linecap="round"
  stroke-linejoin="round"
  class="fill-transparent hover:fill-secondary transition-[fill] duration-150 group"
  ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
    d="M2 8a4 4 0 0 1 4 -4h12a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-12a4 4 0 0 1 -4 -4v-8z"
  ></path><path
    class="group-hover:fill-primary group-hover:stroke-primary transition-[stroke,fill] duration-150"
    d="M10 9l5 3l-5 3z"></path></svg
>
