---
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import { SITE } from "@data/SITE";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
  onHome?: boolean;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang={SITE.lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={SITE.description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={SITE.favicon} />
    <title>{SITE.title + title}</title>

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content={SITE.URL.site} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={SITE.title + title} />
    <meta property="og:description" content={SITE.description} />
    <meta property="og:image" content={SITE.OG_image} />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content={SITE.URL.site.substring(8)} />
    <meta property="twitter:url" content={SITE.URL.site} />
    <meta name="twitter:title" content={SITE.title + title} />
    <meta name="twitter:description" content={SITE.description} />
    <meta name="twitter:image" content={SITE.OG_image} />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Climate+Crisis:YEAR@1985&family=Fira+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-84D3X270SY"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-84D3X270SY");
    </script>

    <ViewTransitions />
  </head>
  <body
    class="w-full h-fit min-h-[100dvh] grid bg-secondary font-fira relative bg-white-image [background-attachment:fixed]"
  >
    <Header />
    <slot />
    <Footer />
    <style is:global>
      :root {
        --footer-height: 72px;
        --nav-offset-top: 16vh;
      }

      html {
        height: 100%;
        width: 100%;
      }

      /* Styling the scrollbar in Firefox  */
      .scroll-thin {
        scrollbar-color: #ee0175 transparent;
        scrollbar-width: thin;
      }

      /* Styling the scrollbar in Chrome and Safari */
      .scroll-thin::-webkit-scrollbar {
        width: 10px;
      }

      .scroll-thin::-webkit-scrollbar-thumb {
        background-color: #ee0175; /* Set thumb color for Chrome and Safari */
      }

      .scroll-thin::-webkit-scrollbar-track {
        background-color: transparent; /* Set track color for Chrome and Safari */
      }
    </style>
  </body>
</html>
