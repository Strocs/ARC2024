---
import { SITE } from "@data/SITE";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang={SITE.lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={SITE.description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png+svg+xml" href={SITE.favicon} />
    <title>{SITE.title + title}</title>

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content={SITE.URL.site} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={SITE.title + title} />
    <meta property="og:description" content={SITE.description} />
    <meta property="og:image" content={SITE.OG_image} />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content={SITE.URL.site.substring(8)} />
    <meta property="twitter:url" content={SITE.URL.site} />
    <meta name="twitter:title" content={SITE.title + title} />
    <meta name="twitter:description" content={SITE.description} />
    <meta name="twitter:image" content={SITE.OG_image} />
  </head>
  <body class="w-full h-full min-h-[100dvh] before:bg-secondary bg-secondary">
    <slot />
  </body>
</html>

<style is:global>
  html {
    height: 100%;
    width: 100%;
  }

  body::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    opacity: 0.25;
    z-index: -10;
    inset: 0;
    background-image: url(/ruido.jpg);
    background-blend-mode: multiply;
    background-repeat: no-repeat;
    background-size: cover;
  }
</style>
