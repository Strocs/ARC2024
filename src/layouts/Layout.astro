---
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import { SITE } from "@data/SITE";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
  headerAs?: string;
}

const { title, headerAs } = Astro.props;
---

<!doctype html>
<html lang={SITE.lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={SITE.description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={SITE.favicon} />
    <title>{SITE.title + title}</title>

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content={SITE.URL.site} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={SITE.title + title} />
    <meta property="og:description" content={SITE.description} />
    <meta property="og:image" content={SITE.OG_image} />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content={SITE.URL.site.substring(8)} />
    <meta property="twitter:url" content={SITE.URL.site} />
    <meta name="twitter:title" content={SITE.title + title} />
    <meta name="twitter:description" content={SITE.description} />
    <meta name="twitter:image" content={SITE.OG_image} />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Climate+Crisis:YEAR@1985&family=Fira+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <ViewTransitions />
  </head>
  <body
    class="w-full h-fit min-h-[100dvh] grid bg-secondary font-fira relative bg-texture"
  >
    <Header as={headerAs} />
    <slot />
    <Footer />
    <style is:global>
      :root {
        --footer-height: 72px;
        --nav-offset-top: 16vh;
      }

      html {
        height: 100%;
        width: 100%;
      }

      .bg-texture::before {
        content: "";
        position: absolute;
        width: 100%;
        height: 100%;
        opacity: 0.25;
        z-index: -10;
        inset: 0;
        background-image: url(/images/texture.svg);
        background-repeat: no-repeat;
        background-size: cover;
      }
    </style>
  </body>
</html>
