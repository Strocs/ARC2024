---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/ARC24.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/css-doodle/0.39.1/css-doodle.min.js"
    ></script>
  </head>
  <body
    class="flex flex-col w-full h-full min-h-[100dvh] p-4 relative before:bg-primary bg-primary"
  >
    <slot />
  </body>
</html>

<style is:global>
  body::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    opacity: 0.25;
    z-index: -10;
    inset: 0;
    background-image: url(/public/ruido.jpg);
    background-blend-mode: multiply;
    background-repeat: no-repeat;
    background-size: cover;
  }
</style>
