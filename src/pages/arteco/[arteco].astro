---
import type { Exhibitors } from "@cTypes/types";
import { EXPO } from "@data/ACTIVITIES";
import { normalizePath } from "@utils/normalizePath";
import type { GetStaticPaths } from "astro";

const visualArtists = EXPO("").exhibitors as Exhibitors[];

export const getStaticPaths = (() => {
  return visualArtists.map((av) => ({
    params: {
      arteco: normalizePath(av.name),
    },
    props: {
      ...av,
    },
  }));
}) satisfies GetStaticPaths;

const { name, artwork, description, social_media } = Astro.props;
