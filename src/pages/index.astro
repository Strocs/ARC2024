    <section
      class="py-24 px-20 flex flex-col justify-center items-center gap-20 h-full w-full"
    >
      <header class="space-y-4 w-full">
        <Image
          src={LogoARC}
          width={500}
          height={180}
          class="mx-auto aspect-[500/180]"
          alt="Logo del festival ARC 2024"
        />
        <TextTape size="2xl"> 27, 28, 29 y 30 de Junio </TextTape>
      </header>
      <section class="space-y-10">
        <h2 class="font-bold text-2xl text-center">Filtrar por:</h2>
        <div class="flex gap-10">
          <TextTape> Día </TextTape>
          <TextTape> Arte </TextTape>
          <TextTape> Lugar </TextTape>
        </div>
      </section>
