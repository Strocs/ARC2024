---
import Layout from "../layouts/Layout.astro";
import LOGO from "../assets/Logo-ARC24.png";
import ULSLogo from "../assets/ULS-Blanco.png";
import SEREMILogo from "../assets/logo-seremi.png";
import { Image } from "astro:assets";
import { RESULTS } from "../data/RESULTS";
import FacebookIcon from "../components/icons/FacebookIcon.astro";
import YoutubeIcon from "../components/icons/YoutubeIcon.astro";
import XIcon from "../components/icons/XIcon.astro";
import InstagramIcon from "../components/icons/InstagramIcon.astro";
---

<Layout title="ARC 2024 | Del 27 al 30 de Junio">
  <header
    class="grid justify-center w-fit mx-auto pt-4 gap-4 md:gap-8 group pb-[6vh]"
  >
    <h1 class="sr-only">ARC 2024, Próximamente</h1>
    <figure class="overfloh-hidden h-fit w-fit mx-auto">
      <Image
        src={LOGO}
        width={500}
        height={180}
        alt="Logo Festival ARC 2024"
        class="aspect-[500/180] h-fit"
        loading="eager"
      />
    </figure>
    <h2
      class="text-secondary font-black text-2xl text-center md:text-5xl uppercase tracking-wide bg-black w-fit py-1 md:py-2 px-4 md:px-8 mx-auto scale-y-150 -skew-y-[6deg] group-hover:skew-y-0 transition duration-300 cursor-default delay-150"
    >
      {"{"}&nbsp; Del 27 al 30 de Junio &nbsp;{"}"}
    </h2>
  </header>
  <main class="h-full w-full max-w-2xl mx-auto space-y-16 pb-72 sm:pb-40">
    <section class="grid gap-5">
      <h2
        class="text-4xl uppercase tracking-tight text-white font-extrabold text-center"
      >
        Postulaciones Abiertas
        <span class="block font-normal normal-case text-lg tracking-normal"
          >Hasta el 10 de Junio</span
        >
      </h2>
      <div class="flex gap-4 flex-wrap max-w-xl mx-auto justify-center">
        <a
          target="_blank"
          href="https://drive.google.com/file/d/1_TfFTNhIwPefC5qjfODh8I7LFxy0OeHh/view"
          class="text-secondary hover:text-[#fcea0d] font-black text-2xl text-center uppercase tracking-wide bg-black w-fit py-1 px-4 mx-auto scale-y-150 -skew-y-[6deg] hover:skew-y-0 transition duration-300 delay-100"
        >
          Artesanías
        </a>
      </div>
    </section>
    <section class="grid gap-8">
      <h2
        class="text-4xl uppercase tracking-tight text-white font-extrabold text-center"
      >
        Resultados Convocatoria
      </h2>
      <div
        class="flex gap-x-4 gap-y-8 md:gap-y-12 flex-wrap max-w-xl mx-auto justify-center"
      >
        {
          RESULTS.map(({ title, docURL }) => (
            <a
              target="_blank"
              href={docURL}
              class="text-secondary hover:text-[#fcea0d] font-black text-2xl text-center  uppercase tracking-wide bg-[#1d70b7] w-fit h-fit py-1 px-4 scale-y-150 -skew-y-[6deg] hover:skew-y-0 transition duration-300 delay-100"
            >
              {title}
            </a>
          ))
        }
      </div>
    </section>
  </main>
  <footer
    class="flex flex-col md:flex-row justify-center items-center gap-8 md:gap-20 h-fit bg-black absolute bottom-0 w-full left-0 p-4"
  >
    <div class="flex items-center gap-8 w-fit">
      <Image
        height={80}
        src={SEREMILogo}
        alt="Logo de SEREMI Región de Coquimbo"
        class="h-16 w-fit aspect-[70/64] shrink-0"
        loading="eager"
      />
      <Image
        height={80}
        src={ULSLogo}
        alt="Logo de la Universidad de La Serena"
        class="h-16 w-fit aspect-[156/64] shrink-0"
        loading="eager"
      />
    </div>
    <div class="flex gap-4 text-secondary w-fit h-fit">
      <a
        aria-label="Visita nuestro Facebook"
        href="https://web.facebook.com/FestivalARC"
        target="_blank"
      >
        <FacebookIcon />
      </a>
      <a
        aria-label="Visita nuestro Instagrma"
        href="https://www.instagram.com/festival_arc"
        target="_blank"><InstagramIcon /></a
      >
      <a
        aria-label="Visita nuestro Twitter"
        href="https://x.com/festivalarc"
        target="_blank"><XIcon /></a
      >
      <a
        aria-label="Visita nuestro Youtube"
        href="https://www.youtube.com/@festivalarc5632"
        target="_blank"><YoutubeIcon /></a
      >
    </div>
    <p class="text-white">
      <strong>ARC 2024</strong> | Desarrollado por <a
        href="https://strocs.dev"
        class="hover:text-[#fcea0d] transition duration-150">StrocsDev</a
      >
    </p>
  </footer>
</Layout>
